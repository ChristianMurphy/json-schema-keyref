{
  "name": "json-schema-keyref",
  "version": "1.0.0",
  "description": "a json schema extension that validates key references",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && typings install && tsc -p src",
    "docs": "rimraf docs && cd src && typedoc --tsconfig tsconfig.json --out ../docs",
    "posttest": "rimraf src/*.js test/*.js",
    "precommit": "npm test",
    "prepublish": "npm test && npm run build",
    "prepush": "npm test",
    "pretest": "typings install && tsc -p test",
    "test": "ava && tslint src/*.ts test/*.ts && remark *.md -q --no-stdout"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChristianMurphy/json-schema-keyref.git"
  },
  "keywords": [
    "json",
    "schema",
    "key",
    "keyref",
    "validator"
  ],
  "author": {
    "name": "Christian Murphy",
    "email": "Christian.Murphy.42@gmail.com",
    "url": "https://github.com/ChristianMurphy"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ChristianMurphy/json-schema-keyref/issues"
  },
  "homepage": "https://github.com/ChristianMurphy/json-schema-keyref#readme",
  "dependencies": {
    "jsonpath": "^0.2.11"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "husky": "^0.13.1",
    "remark-cli": "^3.0.0",
    "remark-preset-lint-consistent": "^2.0.0",
    "remark-preset-lint-recommended": "^2.0.0",
    "rimraf": "^2.6.1",
    "tslint": "^4.5.0",
    "typedoc": "^0.5.7",
    "typescript": "^2.2.1",
    "typings": "^2.1.0"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "preset-lint-consistent"
    ]
  }
}
