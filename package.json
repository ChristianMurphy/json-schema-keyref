{
  "name": "json-schema-keyref",
  "version": "3.0.0",
  "description": "a json schema extension that validates key references",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdx build",
    "docs": "rimraf docs && cd src && typedoc --tsconfig tsconfig.json --mode modules --out ../docs --gitRevision master . && nodetouch ../docs/.nojekyll",
    "prepublishOnly": "npm test && npm run build",
    "commitlint": "commitlint --from HEAD~1",
    "test": "tsdx test",
    "lint": "tsdx test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChristianMurphy/json-schema-keyref.git"
  },
  "keywords": [
    "json",
    "schema",
    "key",
    "keyref",
    "validator"
  ],
  "author": {
    "name": "Christian Murphy",
    "email": "Christian.Murphy.42@gmail.com",
    "url": "https://github.com/ChristianMurphy"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ChristianMurphy/json-schema-keyref/issues"
  },
  "homepage": "https://github.com/ChristianMurphy/json-schema-keyref#readme",
  "dependencies": {
    "jsonpath": "^1.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@types/jsonpath": "0.2.0",
    "ava": "3.13.0",
    "husky": "4.3.0",
    "remark-cli": "9.0.0",
    "remark-preset-lint-consistent": "4.0.0",
    "remark-preset-lint-recommended": "5.0.0",
    "rimraf": "3.0.2",
    "touch": "3.1.0",
    "tsdx": "^0.14.1",
    "typedoc": "0.19.2",
    "typescript": "4.0.5"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "preset-lint-consistent"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "automerge": true,
    "major": {
      "automerge": false
    },
    "lockFileMaintenance": {
      "enabled": true
    },
    "semanticPrefix": "chore:",
    "semanticCommitScope": ""
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  }
}
